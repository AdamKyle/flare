{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "es2020",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": true,
        "skipLibCheck": false,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "ES2021.String",
            "dom",
            "dom.iterable"
        ],
        "paths": {
            "configuration/*": ["resources/js/configuration/*"],
            "event-system/*": ["resources/js/event-system/*"],
            "game-data/*": ["resources/js/game-data/*"],
            "game-utils/*": ["resources/js/game/util/*"],
            "api-handler/*": ["resources/js/api-handler/*"],
            "ui/*": ["resources/js/ui/*"],
            "service-container/*": ["resources/js/service-container/*"],
            "service-container-provider/*": ["resources/js/service-container-provider/*"],
            "websockets": ["resources/js/websocket-handler/*"]
        }
    },
    "skipLibCheck": true,
    "include": ["resources/js/**/*"],
    "exclude": ["node_modules", "**/node_modules/*"]
}
